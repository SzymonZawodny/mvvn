<Application
    x:Class="CoursesApp.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:CoursesApp.Converters"
    xmlns:local="using:CoursesApp"
    RequestedTheme="Dark">
    <Application.Resources>
        <Style TargetType="TextBlock" x:Key="DisplayHeaderTextBlockStyle"
               BasedOn="{StaticResource SubheaderTextBlockStyle}">
            <Setter Property="Margin"
                    Value="5,5,10,15"/>
        </Style>

        <converters:ListViewItemToCourseConverter x:Key="ListViewItemToCourseConverter" />
        <converters:ListViewItemToStepConverter x:Key="ListViewItemToStepConverter" />
        <converters:BooleanToColorConverter x:Key="BooleanToColorConverter" />
        <converters:BooleanToStringConverter x:Key="BooleanToStringConverter" />

    </Application.Resources>

</Application>
